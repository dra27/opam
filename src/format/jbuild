(* -*- tuareg -*- *)

#use "../jbuild.common"

let () = out {|
(jbuild_version 1)

(library
  ((name opam_format)
   (public_name opam-format)
   (synopsis "OCaml Package Manager file format handling library")
   (libraries (opam-core opam-file-format re.pcre re.posix))
   (flags (:standard %s))
   (wrapped false)))

(ocamllex (opamLineLexer opamInterpLexer))

(ml_of_mli (opamTypes))
|} ocaml_flags
